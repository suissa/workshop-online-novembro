extends ../layout

block content
  h1 
    | Minhas cervejas
  
  //- p= cerveja
  if acao == 'create'
    - var url = '/beers'
    - var cerveja = {}
  else
    - var url = '/beers/'+cerveja._id
  form(action=url, method='POST')
    label 
      span Nome
      input(type='text', name='name', placeholder='Nome', value='#{cerveja.name}')

    label 
      span Teor Alcoólico
      input(type='text', name='alcohol', value='#{cerveja.alcohol}')
    
    label 
      span Categoria
      input(type='text', name='category', placeholder='Categoria', value='#{cerveja.category}')

    label 
      span Descrição
      textarea(name='description', placeholder='Descrição')
        | #{cerveja.description}

    if acao == 'update'
      input(type='hidden', name='_method', value='PUT')
      input(type='submit', value='ALETARAR')
    if acao == 'delete'
      input(type='hidden', name='_method', value='DELETE')
      input(type='submit', value='DELETAR')
    if acao == 'create'
      input(type='submit', value='Enviar')
    
    
    